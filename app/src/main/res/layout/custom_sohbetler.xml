<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_sohbetler_profil"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:foreground="@drawable/oval_resim"
        app:srcCompat="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_sohbetler_profil"
        android:layout_alignTop="@+id/iv_sohbetler_profil"
        android:layout_toEndOf="@+id/iv_sohbetler_profil"
        android:layout_toLeftOf="@+id/tv_sohbetler_zaman"
        android:layout_toRightOf="@+id/iv_sohbetler_profil"
        android:layout_toStartOf="@+id/tv_sohbetler_zaman"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sohbetler_adsoyad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:text="TextView"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sohbetler_aciklama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:text="TextView"
            android:textSize="18sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sohbetler_zaman"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:text="TextView" />


</RelativeLayout>